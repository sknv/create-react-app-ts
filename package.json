{
  "name": "create-react-app-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "react-scripts-ts": "2.16.0",
    "tailwindcss": "^0.5.3",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "start": "npm run tailwind:css && PORT=3000 react-scripts-ts start",
    "build": "npm run tailwind:css && GENERATE_SOURCEMAP=false react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "tailwind:css": "tailwind build src/tailwind.src.css -c tailwind.config.js -o src/tailwind.css"
  }
}
